{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}", // Startet eine neue VS Code Instanz
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}" // LÃ¤dt deine Extension
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js" // Zeigt den kompilierten Code an
      ],
      "preLaunchTask": "build:native", // Dieser Task muss definiert sein
      "env": {
        "NODE_ENV": "development" // Setzt die Umgebung auf 'development'
      }
    }
  ]
}
