{
  "name": "ldproxy-editor",
  "displayName": "ldproxy editor",
  "description": "ldproxy configuration editor",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/ldproxy/editor",
  "type": "module",
  "engines": {
    "vscode": "^1.83.0"
  },
  "browser": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ldproxy-editor.showAutoCreate",
        "title": "ldproxy: Create new entity"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "ldproxy-editor.storeTree",
          "name": "Sources"
        },
        {
          "id": "ldproxy-editor.entityTree",
          "name": "Entities"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/extension/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.83.0",
    "@types/webpack-env": "^1.18.2",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@vscode/test-web": "^0.0.22",
    "eslint": "^8.50.0",
    "glob": "^7.1.6",
    "mocha": "^9.2.0",
    "path-browserify": "^1.0.1",
    "prettier": "^2.2.1",
    "process": "^0.11.10",
    "ts-loader": "^9.2.5",
    "typescript": "^5.2.2",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
