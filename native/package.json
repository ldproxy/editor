{
  "name": "ldproxy-editor",
  "displayName": "ldproxy editor",
  "description": "ldproxy configuration editor",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/ldproxy/editor",
  "publisher": "iide",
  "preview": true,
  "categories": [
    "Other"
  ],
  "type": "commonjs",
  "engines": {
    "vscode": "^1.82.2"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ldproxy-editor.showAutoCreate",
        "title": "Create new entities",
        "category": "ldproxy",
        "icon": "$(add)"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd ../webview-ui && npm install",
    "build:all": "npm run build:webview && npm run compile-native",
    "build:webview": "cd ../webview-ui && npm run build",
    "start:webview": "cd ../webview-ui && npm run start",
    "compile-native": "webpack --mode development",
    "watch-native": "webpack --mode development --watch",
    "vscode:prepublish": "VITE_DEV=false npm run build:webview && npm run package-native",
    "package-native": "webpack --mode production --devtool hidden-source-map",
    "package": "vsce package -o dist/ldproxy-editor.vsix -t darwin-arm64 --pre-release",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@xtracfg/core": "^4.2.0-lib.91",
    "@xtracfg/transport-native": "^4.2.0-lib.91",
    "@xtracfg/transport-websocket": "^4.2.0-lib.91",
    "anymatch": "^3.1.3"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.5.13",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.9",
    "@types/node": "^12.20.55",
    "@types/vscode": "^1.82.2",
    "@types/webpack-env": "^1.18.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vscode/test-web": "^0.0.22",
    "@vscode/vsce": "^2.21.1",
    "async-mutex": "^0.4.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.51.0",
    "glob": "^7.2.3",
    "jest": "^29.7.0",
    "js-md5": "^0.8.3",
    "js-yaml": "^4.1.0",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.8",
    "process": "^0.11.10",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.10.0",
    "yaml": "^2.3.4"
  }
}
